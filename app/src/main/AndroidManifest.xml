<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maseno.franklinesable.politicalapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Forgot_password"
            android:label="@string/title_activity_forgot_password"
            android:parentActivityName=".log_in_package.Front_EndActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStyleFrontEnd">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.maseno.franklinesable.politicalapp.log_in_package.Front_EndActivity" />
        </activity>
        <activity
            android:name=".central_class_boss.Main_BossClass"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/BossTheme.NoActionBar" >

        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".log_in_package.Front_EndActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStyleFrontEnd">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.maseno.franklinesable.politicalapp.log_in_package.Front_EndActivity" />
        </activity>
        <activity
            android:name=".Account_Settings"
            android:label="@string/title_activity_account__settings"
            android:parentActivityName=".central_class_boss.Main_BossClass"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme4.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.maseno.franklinesable.politicalapp.central_class_boss.Main_BossClass" />
        </activity>
        <activity
            android:name=".feeds_manager.Feeds_Activity"
            android:label="@string/title_activity_feeds_"
            android:parentActivityName=".central_class_boss.Main_BossClass"
            android:screenOrientation="portrait"
            android:theme="@style/FeedsTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.maseno.franklinesable.politicalapp.central_class_boss.Main_BossClass" />
        </activity>
        <activity
            android:name=".AboutApp"
            android:label="@string/title_activity_about_app"
            android:parentActivityName=".central_class_boss.Main_BossClass"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.maseno.franklinesable.politicalapp.central_class_boss.Main_BossClass" />
        </activity>
        <activity
            android:name=".events_manager.EventsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/EventsTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".events_manager.Add_Event"
            android:label="@string/title_activity_add__event"
            android:parentActivityName=".events_manager.EventsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/EventsTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.maseno.franklinesable.politicalapp.events_manager.EventsActivity" />
        </activity>

        <receiver
            android:name=".services.EventsAlarmReceiver"
            android:process=":remote" />

        <service
            android:name=".services.ModuleFetchService"
            android:exported="false" />

        <receiver android:name=".BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".welcome_package.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".log_in_package.Front_EndActivity"
            android:label="@string/title_activity_front__end"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeStyleFrontEnd.NoActionBar" />
        <activity
            android:name=".notifications_package.NotificationsActivity"
            android:label="@string/title_activity_notifications"
            android:parentActivityName=".central_class_boss.Main_BossClass"
            android:screenOrientation="portrait"
            android:theme="@style/NotifyTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.maseno.franklinesable.politicalapp.central_class_boss.Main_BossClass" />
        </activity>
        <activity
            android:name=".notifications_package._ViewNotifications"
            android:label="@string/title_activity_view_notifications"
            android:parentActivityName=".notifications_package.NotificationsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NotifyTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.maseno.franklinesable.politicalapp.notifications_package.NotificationsActivity" />
        </activity>
    </application>

</manifest>
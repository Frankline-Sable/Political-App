<resources>

    <!-- Base application theme. -->
    <style name="BossTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color_boss</item>
        <item name="colorPrimaryDark">@color/dark_primary_color_boss</item>
        <item name="colorAccent">@color/accent_color_boss</item>
        <item name="android:textColorSecondary">@color/secondary_text_boss</item>
        <item name="android:listDivider">@color/divider_color_boss</item>

    </style>

    <style name="BossTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BossTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BossTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

<resources>

    <!-- Base application theme. -->
    <style name="FeedsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color_feeds</item>
        <item name="colorPrimaryDark">@color/dark_primary_color_feeds</item>
        <item name="colorAccent">@color/accent_color_feeds</item>
        <item name="android:textColorSecondary">@color/secondary_text_feeds</item>
        <item name="android:listDivider">@color/divider_color_feeds</item>
        <item name="android:textColorPrimary">@color/primary_text_feeds</item>
    </style>

    <style name="FeedsTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FeedsTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FeedsTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

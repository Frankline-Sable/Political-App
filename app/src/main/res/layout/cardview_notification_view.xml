<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/recipientCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        card_view:cardBackgroundColor="#ecef84"
        card_view:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/recipientText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I love you mommy very much I love you mommy very"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/recipientTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipientText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:alpha="0.7"
                android:text="18:00"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/senderCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/recipientCard"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        card_view:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/senderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I love you mommy very much"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/senderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/senderText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:alpha="0.7"
                android:drawablePadding="4dp"
                android:text="18:00"
                android:drawableRight="@drawable/ic_done_all_black_24dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/launchSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_launch_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/ntw_guide"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:text="@string/ntw_guide"
            android:textColor="@android:color/black"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_perm_data_setting_black_24dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:drawableLeft="@drawable/ic_perm_data_setting_black_24dp" />

    </LinearLayout>


</LinearLayout>
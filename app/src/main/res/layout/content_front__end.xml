<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.maseno.franklinesable.politicalapp.log_in_package.Front_EndActivity"
    tools:showIn="@layout/activity_front_end"
    android:background="@android:color/white">
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/dev_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="brought to you by"
            android:textAppearance="?android:textAppearanceSmall"
            android:translationZ="1dp"
            android:fontFamily="cursive"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/welcomeTxt"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_name"
            />

        <ImageView
            android:layout_marginTop="32dp"
            android:id="@+id/welImg"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/dev_logo"
            android:onClick="openDevWeb"/>

        <TextView
            android:id="@+id/welcomeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welImg"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:fontFamily="cursive"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Getting Started"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/accent_color_ev"


            android:textSize="40sp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/credBat"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:background="@drawable/bg_button_states_front"
            android:elevation="1dp"
            android:onClick="execCredentialsManager"
            android:text="Sign up for free!"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/welImg2"
            android:layout_width="176dp"
            android:layout_height="176dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/political_app_icon" />

        <TextView
            android:id="@+id/welText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welImg2"
            android:gravity="center"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:text="@string/app_sign_in"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/welText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welText1"
            android:gravity="center"
            android:text="@string/quickstart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welText2"
            android:alpha="0.7"
            android:gravity="center"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/signed_out"
            android:textAppearance="@style/TextAppearance.AppCompat"
             />

        <Button
            android:id="@+id/signInBat2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_button_states_front"
             android:onClick="execCredentialsManager"
            android:text="@string/sign_in"
            android:textAppearance="?android:textAppearanceMedium"
             />
    </RelativeLayout>


</RelativeLayout>


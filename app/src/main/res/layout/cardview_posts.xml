<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/profile_image"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/posterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_toRightOf="@+id/profilePic"
                android:text="Frankline Sable"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/posterState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/posterName"
                android:layout_toRightOf="@+id/profilePic"
                android:text="posted"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/posterTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_schedule_black_24dp"
                android:drawablePadding="5dp"
                android:text="2h" />

            <ImageView
                android:id="@+id/feedImage"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_below="@+id/profilePic"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/govern_pic"
                android:tint="@android:color/transparent"/>

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedImage"
                android:drawableLeft="@drawable/ic_like_favorite_border_black_24dp"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="2K"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedImage"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_chat_black_24dp"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="98"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/feedImage"
                android:drawableLeft="@drawable/ic_menu_share"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="69"
                android:textAppearance="?android:textAppearanceSmall" />


            <TextView
                android:id="@+id/headLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/likes"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Upcoming Political Event"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>